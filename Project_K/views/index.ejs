<!-- views/index.ejs -->
<html>
<head>
  <link rel="stylesheet" href="/styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <h1>Project Data</h1>
    <p>ProjectStatus : <%= projectData.ProjectStatus %></p>

    <div>
        <h2>Project description</h2>
        <ul>
            <% projectData.Project_descripton.forEach(description => { %>
                <li><%= description %>
              <% }); %>
        </ul>
        <p>Current Stage : <%= projectData.CurrentStage %></p>
        <p>ReportDate : <%= projectData.ReportDate %></p>
        <p>Release Version : <%= projectData.Release_version %></p>
        <p>Next Milestone : <%= projectData.Next_milestone %></p>
    </div>
    <div>
        <!-- Display Release Details Data -->
    <h2>Release Details</h2>
    <table class="table table-bordered">
     <tr>
         <% projectData.Release_details_columns.forEach(column => { %>
          <th><%= column %></th>
         <% }); %>
    </tr>
    <% projectData.Release_details_data.forEach(row => { %>
    <tr>
        <td ><%= row.ENVIRONMENT %></td>
        <td ><%= row.STATUS %></td>
        <td ><%= row["PLANNED RELEASE DATE"] %></td>
        <td ><%= row["ACTUAL RELEASE DATE"] %></td>
    </tr>
    <% }); %>
    </table>
    </div>
    <div>
        <h2>Highlights</h2>
        <ul>
            <% projectData.Highlights.forEach(highlight => { %>
                <li><%= highlight %>
              <% }); %>
        </ul>
    </div>
    <div>
        <!-- Display Feature Status Data -->
        <h2>Feature Status</h2>
        <table>
            <tr>
                <% projectData.Feature_status_columns.forEach(column => { %>
                 <th><%= column %></th>
                <% }); %>
           </tr>
           <% projectData.Feature_status_data.forEach(row => { %>
           <tr>
               <td><%= row.Feature %></td>
               <td><%= row.Status %></td>
               <td><%= row.Remarks %></td>
           </tr>
           <% }); %>
           </table>
    </div>
    <div>
        <!-- Display Risk Tracker Data -->
        <h2>Risk Tracker</h2>
        <table>
            <tr>
                <% projectData.Risk_tracker_columns.forEach(column => { %>
                 <th><%= column %></th>
                <% }); %>
           </tr>
           <% projectData.Risk_tracker_data.forEach(row => { %>
           <tr>
               <td><%= row.SL %></td>
               <td><%= row.Identified_Risk %></td>
               <td><%= row.Status %></td>
               <td><%= row.Severity %></td>
               <td><%= row.Impact %></td>
               <td><%= row.Mitigation %></td>
               <td><%= row.Closure_required_by %></td>
               <td><%= row.Owner %></td>
           </tr>
           <% }); %>
           </table>
    </div>
    <div>
        <!-- Display Risk Tracker Data -->
        <h2>Defect Trend</h2>
        <p><%= projectData.Defect_trend_descripton %></p>

        <table>
            <tr>
                <% projectData.Defect_trend_table1_columns.forEach(column => { %>
                 <th><%= column %></th>
                <% }); %>
           </tr>
           <% projectData.Defect_trend_table1_data.forEach(row => { %>
           <tr>
               <td><%= row.Feature %></td>
               <td><%= row.Jira_ID %></td>
               <td><%= row.Description %></td>
               <td><%= row.Status %></td>
               <td><%= row.DEV_Owner %></td>
               <td><%= row.Severity %></td>
               <td><%= row.ETA %></td>
           </tr>
           <% }); %>
           </table>

           <table>
            <tr>
                <% projectData.Defect_trend_table2_columns.forEach(column => { %>
                 <th><%= column %></th>
                <% }); %>
           </tr>
           <% projectData.Defect_trend_table2_data.forEach(row => { %>
           <tr>
               <td><%= row.Total_Defects %></td>
               <td><%= row.Blocker %></td>
               <td><%= row.Severe %></td>
               <td><%= row.Moderate %></td>
               <td><%= row.Minor %></td>
           </tr>
           <% }); %>
           </table>

    </div>
    <div>
        <!-- Display QA Test Execution Data -->
        <h2>QA Test Execution Data</h2>
        <table>
            <tr>
                <% projectData.QA_Test_Execution_status_columns.forEach(column => { %>
                 <th><%= column %></th>
                <% }); %>
           </tr>
           <% projectData.QA_Test_Execution_status_data.forEach(row => { %>
           <tr>
               <td><%= row.Feature %></td>
               <td><%= row.TotalTestCase %></td>
               <td><%= row.Executed %></td>
               <td><%= row.Pass %></td>
               <td><%= row.Fail %></td>
               <td><%= row.Remarks %></td>
           </tr>
           <% }); %>
           </table>
    </div>
  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

</body>
</html>
